<UserControl x:Class="EverydayPatientInfo.MVVM.View.SignInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EverydayPatientInfo.MVVM.View"
             xmlns:viewModel="clr-namespace:EverydayPatientInfo.MVVM.ViewModel"
             xmlns:view="clr-namespace:EverydayPatientInfo.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <UserControl.DataContext>
        <viewModel:SignInViewModel/>
    </UserControl.DataContext>
    
    <Border Margin="10">
        <Grid>
            
            <!--#region Columns and rows-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            
            <!--#endregion-->
            
            <!-- Welcome text-->
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="Welcome!" FontSize="60"
                       Style="{StaticResource BaseTextBlockStyle}" 
                       Margin="0 0 0 20"/>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                        VerticalAlignment="Center">
                
                <TextBox Name="UsernameField"  
                         Text="{Binding Username}" MinWidth="500"
                         Style="{StaticResource NewTextBloxStyle}"
                         HorizontalAlignment="Stretch"
                         Margin="40 5"/>

                <TextBox Name="PasswordField"
                         Text="{Binding Password}" MinWidth="500"
                         Style="{StaticResource NewTextBloxStyle}"
                         HorizontalAlignment="Stretch"
                         Margin="40 5"/>
                     
            </StackPanel>
            
            <!--#region HelpBar-->
            <Grid Grid.Row="2" Grid.ColumnSpan="3">
                <Button Content="Sign In" FontSize="20"
                        Style="{StaticResource Hoverless}" 
                        HorizontalAlignment="Right" 
                        Background="Orange"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Register" FontSize="16"
                        Style="{StaticResource Hoverless}" 
                        HorizontalAlignment="Right" 
                            Margin="0 0 20 0"/>
                    
                    <Button Content="Forgot password?" FontSize="16"
                        Style="{StaticResource Hoverless}" 
                        HorizontalAlignment="Right" />
                </StackPanel>
            </Grid>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
