<UserControl x:Class="EverydayPatientInfo.MVVM.View.MainContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EverydayPatientInfo.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--#region Constrol panel-->
        <Border Grid.Column="0">

            <StackPanel Orientation="Vertical">

                <!--#region User info-->
                <StackPanel Orientation="Horizontal" Margin="10">

                    <Rectangle Margin="10,0,0,0"
                               VerticalAlignment="Center" 
                               
                               Width="30" Height="30" 
                               Fill="Orange"/>

                    <StackPanel Orientation="Vertical"
                                Margin="10,0,0,0">
                        <TextBlock Text="User Name" Style="{StaticResource Alligned}" 
                                   FontSize="16"
                                   HorizontalAlignment="Left" />

                        <TextBlock Text="User Role" Style="{StaticResource Alligned}" 
                                   FontSize="10"
                                   HorizontalAlignment="Left"/>

                    </StackPanel>
                </StackPanel>
                <!--#endregion-->

            </StackPanel>


        </Border>
        <!--#endregion-->

        <Border Grid.Column="1">
            <Rectangle Fill="{StaticResource BackgroundLightBrush}"/>
        </Border>

    </Grid>
</UserControl>
