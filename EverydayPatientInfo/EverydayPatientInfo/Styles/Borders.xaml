<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EverydayPatientInfo">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type Border}" x:Key="Gradient">
        <Setter Property="Background" Value="{StaticResource GradientBlue}"/>
    </Style>
    <Style TargetType="{x:Type Border}" x:Key="Light">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
    </Style>
    <Style TargetType="{x:Type Border}" x:Key="VeryLight">
        <Setter Property="Background" Value="{StaticResource BackgroundVeryLightBrush}"/>
    </Style>

</ResourceDictionary>